{
  "ShinMode": {
    "enabled": true,
    "mode": "shin",
    "maxQueueSize": 100,
    "queueTimeout": 60000,
    "keepAliveConnections": true,
    "connectionReuseTime": 5000,
    "providers": {
      "anthropic": {
        "maxConcurrency": 1,
        "enabled": true
      },
      "openai": {
